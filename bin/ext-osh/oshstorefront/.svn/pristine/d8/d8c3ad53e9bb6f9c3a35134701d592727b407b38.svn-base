ul.dropdown,
ul.dropdown li,
ul.dropdown ul {
 list-style: none;
 margin: 0;
 padding: 0;
}

ul.dropdown {
 position: relative;
 z-index: 597;
 float: left;
}

ul.dropdown li {
 float: left;
 min-height: 1px;
 line-height: 1.3em;
 vertical-align: middle;
 /*position: relative;*/
 z-index: 599;
 cursor: default;
}


ul.dropdown ul {
 visibility: hidden;
 position: absolute;
 top: 35px;
 left: 0px;
 z-index: 598;
 width: auto;
}

ul.dropdown ul li {
 float: none;
}

ul.dropdown ul ul {
 top: 1px;
 left: 99%;
}

ul.dropdown li.maindir:hover > ul {
 visibility: visible;
}
#headerNav ul table ul{ padding:10px}
#headerNav ul table ul ul{ padding:0}
#headerNav ul table ul ul a{padding-left:5px;padding-right:0}
#headerNav ul li.third,#headerNav ul li.fifth { clear:left;}
.dir.maindir {/*position:relative;*/}
#headerNav ul.dropdown .dir.maindir ul li.dir{border:none;margin:0 0 10px; overflow:hidden}
.lastcolume{width:220px}
.thirdcolume,.secondcolume {width:180px}
.lastcolume img{ width:200px; height:200px}
#headerNav ul.dropdown-columnar ul ul li a{ color:#E4DBB2}
#headerNav ul.dropdown-columnar ul ul li ul a{ color:#fff}
#headerNav ul ul{padding:3px 0 10px 20px}
#headerNav ul ul ul{ padding:0}
ul.dropdown-columnar td.secondcolume ul li,ul.dropdown-columnar td.secondcolume ul li.dir { width:100% !important}
.dropdown td.firstcolume { width:490px; overflow:hidden; }
#headerNav ul#nav td.firstcolume ul{width:100%}
#headerNav ul#nav li.dir ul li table.tables td li.dir{width:100%}
#headerNav ul#nav li.dir ul li table.tables td.firstcolume li.dir{width:164px !important;}