<%@ taglib prefix="spring" uri="http://www.springframework.org/tags"%>
	 <div id="containaddress">
		<div class="leftwrapper">
			<h2><spring:theme code="checkout.single.shipping"/></h2>
			<div class="borderbox shipping_add">
				<br clear="all" />
				<div class="form_add">
					<form name="address" id="address">
						<p><spring:theme code="checkout.summary.deliveryAddress.useForNewAddress"/></p>
						<p>
							<spring:theme code="text.field"/><span class="redtext">*</span> <spring:theme code="text.required"/>
						</p>
						<p>
							<spring:theme code="login.email"/><span class="redtext">*</span>
						</p>
						<input type="text" value="" class="email required textfield"
							id="email" name="email" />
						<p>
							<spring:theme code="profile.firstName"/> <span class="redtext">*</span>
						</p>
						<input type="text" value="" class="first name required textfield" maxlength="15"
							id="first name" name="first name" />
						<p>
							<spring:theme code="text.lastname"/> <span class="redtext">*</span>
						</p>
						<input type="text" value="" class="last name required textfield" maxlength="15"
							id="last name" name="last name" />
						<p>
							<spring:theme code="address.line1"/> <span class="redtext">*</span>
						</p>
						<input type="text" value=""
							class="Address line1 required textfield" id="Address line1 name" maxlength="40"
							name="Address line1 name" />
						<p>
							<spring:theme code="address.line2"/> <span class="redtext">*</span>
						</p>
						<input type="text" value=""
							class="Address line2 required textfield" id="Address line2 name" maxlength="40"
							name="Address line2 name" />
						<p>
							<spring:theme code="address.townCity"/> <span class="redtext">*</span>
						</p>
						<input type="text" value="" class="town/city required textfield"
							id="town/cityname" name="town/city name" />
						<p>
							<spring:theme code="profile.postcode"/> <span class="redtext">*</span>
						</p>
						<input type="text" value=""
							class="zipcode number required textfield" id="zipcodename"
							name="zipcode name" />
						<p>
							<spring:theme code="address.country"/> <span class="redtext">*</span>
						</p>
						<select>
							<option><spring:theme code="address.country"/></option>
						</select>
						<p>
							<input type="checkbox" name="save_address" value="save_address" />
							<spring:theme code="checkout.summary.deliveryAddress.saveAddressInMyAddressBook"/>
						</p>
						<p><spring:theme code="text.address.msg"/></p>
						<div class="use_shipping_address martop marbottom">
							<span class="btngreen"><input type="submit"
								value="Use This Address" id="usethisaddleft1" /></span>
							<div class="clearfix"></div>
						</div>
					</form>
				</div>
			</div>

		</div>
		<div class="select_existing_add">
			<h2><spring:theme code="address.select.existing"/></h2>
			<div class="borderbox form_exist">
				<p><spring:theme code="address.info"/></p>
				<p>{First Name} {Last Name}</p>
				<p>{Address}</p>
				<p>{City}</p>
				<p>{Zip}</p>
				<div class="btn martop marbottom">
					<div class="use_shipping_address floatl">
						<span class="btngreen"><input type="submit"
							value="Use This Address" id="usethisaddright1" /></span>
					</div>
					<div class="edit_address">
						<span class="btngreen"><input type="button"
							value="Edit Address" id="editaddress" /></span>
					</div>
					<div class="remove_address">
						<span class="btngreen"><input type="button"
							value="Remove Address" id="removeadd" /></span>
					</div>
					<div class="clearfix"></div>
				</div>
				<hr />
				<p>Lo Mo</p>
				<p>118 Main Street</p>
				<p>Raleigh</p>
				<p>27605</p>
				<div class="btn martop marbottom">
					<div class="use_shipping_address floatl">
						<span class="btngreen"><input type="button"
							value="Use This Address" id="usethisaddright2" /></span>
					</div>
					<div class="edit_address">
						<span class="btngreen"><input type="button"
							value="Edit Address" id="editaddress2" /></span>
					</div>
					<div class="remove_address">
						<span class="btngreen"><input type="button"
							value="Remove Address" id="removeadd2" /></span>
					</div>
					<div class="clearfix"></div>
				</div>
			</div>
		</div>
	</div>