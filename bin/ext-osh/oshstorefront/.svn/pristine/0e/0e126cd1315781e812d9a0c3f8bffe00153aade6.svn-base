@import "default.css";


/* -- Base style extension -- */

ul.dropdown li a {
 display: block;
 padding: 0 0px;
}


/* -- Base style override -- */

ul.dropdown li {
 padding: 0;
}


/* -- Base style reinitiate: post-override activities -- */

ul.dropdown li.dir {
 padding: 0px;
}

	ul.dropdown ul li.dir {
	 padding: 0px;
	 font-size: 14px;
	}
ul.dropdown li.dir .dropmenuahead {
	text-decoration: none;
	color: #663200;
	font-weight: bold;
	font-size: 17px;
    margin: 10px 8px 10px 10px; 
	display: block;
}

#headerNav ul.dropdown li.dir:hover .dropmenuahead {
 color: #fff;
}

#headerNav ul.dropdown li.dir .dropmenuahead:hover {
 color: #fff;
}
/* -- Custom styles -- */

ul.dropdown ul {
 padding: inherit;
}

	ul.dropdown ul a {
	 width: 140px;
	 padding: 3px 0px;
	/*  background: url(../../../../images/lwis.celebrity/pattern2.png) 0 0 repeat-x; */
	}

	ul.dropdown ul a:hover {
	 background-color: #ffa500;
	 color: #fff;
	}

		ul.dropdown ul ul {
		 padding: 0;
		 margin-left: -5px; 
		}