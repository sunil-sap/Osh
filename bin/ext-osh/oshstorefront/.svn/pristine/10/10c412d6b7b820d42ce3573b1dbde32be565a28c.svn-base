/* -- Base drop-down styling -- */

ul.dropdown {
 font-weight:bold;
	font-size:17px;
}

	ul.dropdown li {
	 padding: 0 10px;
	 background-color: transparent;
	 color: #e4dbb2;
	 font-size:12px;
	}

	#headerNav ul.dropdown li.hover,
	#headerNav ul.dropdown li:hover, #headerNav ul.dropdown li:hover a {
	 background-color: #4d4445;
	 color: #fff;
	}
	
	#headerNav ul.dropdown ul ul ul li a:link,
	#headerNav ul.dropdown ul ul ul li a:visited{
		color: #fff;  text-decoration: none;
		font-size: 12px;
font-family: arial;
font-weight: normal;
margin:0px;
	}
	#headerNav ul.dropdown ul li a:link,
	#headerNav ul.dropdown ul li a:visited	{ color: #fff; text-decoration: none;
		font-size: 14px;
font-family: arial;
font-weight: normal;
margin:0px;
	 }
	 
	 #headerNav ul.dropdown ul ul li a,#headerNav ul.dropdown ul ul li a:link,#headerNav ul.dropdown ul ul li a:visited{ color:#E4DBB2 }
	#headerNav ul.dropdown a:hover		{ color: #fff; }
	#headerNav ul.dropdown ul li a:active	{ color: #ffa500; }

	/* -- level mark -- */

	ul.dropdown ul {
	 background-color: #4d4445;
	 font-size: 12px;
	 letter-spacing: normal;
	 color:#FFFFFF;
	}

		ul.dropdown ul li {
		 font-weight: bold;
		}

		ul.dropdown li.last ul li {
		 float: right;
		}

		/* -- level mark -- */

		ul.dropdown ul ul {
		 margin-top: 5px;
		 text-transform: none;
		}

			ul.dropdown ul ul li {
			 font-weight: normal;
			}


/* -- Supporting class `dir` -- */

ul.dropdown *.dir {
 padding-right: inherit;
 /* background-image: url(../../../../images/lwis.celebrity/nav-arrow-down.png); */
 background-position: 100% 50%;
 background-repeat: no-repeat;
}

ul.dropdown ul *.dir {
 background-image: none;
}