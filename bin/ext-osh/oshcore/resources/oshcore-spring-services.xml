		<bean id="createMediaImpexService" class="com.hybris.osh.core.service.impl.DefaultCreateMediaImpexService" scope="tenant">
		<property name="findMediaContainerDao" ref="findMediaContainerDao"/>
		<property name="productDao" ref="productDao"/>
		<property name="importHeader">
			<value>
			#% impex.setRelaxedMode(true);
			$productCatalog=oshProductCatalog
			$catalogVersion=catalogversion(catalog(id[default=$productCatalog]),version[default='Staged'])[unique=true,default=$productCatalog]
			$media=@media[translator=de.hybris.platform.impex.jalo.media.MediaDataTranslator]
			$medias=medias(code, $catalogVersion)			
			$thumbnail=thumbnail(code, $catalogVersion)
			$picture=picture(code, $catalogVersion)
			$galleryImages=galleryImages(qualifier, $catalogVersion)
			$siteResource=jar:com.hybris.osh.initialdata.setup.InitialDataSystemSetup&amp;/oshinitialdata/import/productCatalogs/$productCatalog
		</value>		
		</property>
		<property name="mediaHeader">
		<value># Import media
			INSERT_UPDATE Media;mediaFormat(qualifier);code[unique=true];$media;mime[default='image/jpg'];$catalogVersion;folder(qualifier)
		</value>
		</property>
			<property name="mediaContHeader">
		<value># Import media container
			INSERT_UPDATE MediaContainer;qualifier[unique=true];$medias;$catalogVersion;conversionGroup(code)
		</value>
		</property>	
		<property name="productHeader">
		<value># Import product images
			UPDATE Product;code[unique=true];$picture;$thumbnail;$galleryImages;$catalogVersion
		</value>
		</property>	
		<property name="productHeaderForAltCont">
		<value># Import product images for alternate media container
			UPDATE Product;code[unique=true];$galleryImages[mode=append];$catalogVersion
		</value>
		</property>	
		<property name="productHeaderForExistingCont">
		<value># Import product images for existing media containers
			UPDATE Product;code[unique=true];$picture;$thumbnail;$catalogVersion
		</value>
		</property>	
		<property name="removeOriginalImageHeader">
		<value># Remove original product images
			Remove Media;code[unique=true];mime[default='image/jpg'];$catalogVersion;folder(qualifier)
		</value>
		</property>	
		<property name="importService" ref="importService"/>
	</bean>
	
	
	
	
