<configuration xmlns="hybris.de/schemas/hmc/generic"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="hybris.de/schemas/hmc/generic hmc.xsd">
	
	<explorertree>
        <group name="oshshippinggroup">
            <typeref type="OSHShipping"/>
            <typeref type="Warehouse"/>
            <typeref type="StockLevel"/>
             <typeref type="OshStoreFlag" />
        </group>
    </explorertree>
    
	<type name="OshProductPercentageDiscountPromotion" mode="append">
		<organizer>
			<editor mode="append">
				<tab name="tab.promotion.properties" mode="append">
					<section name="section.promotion.description" mode="replace" position="0">
						<listlayout>
								<text name="text.productpercentagediscountpromotion.detaileddescription" />
							</listlayout>
					</section>
					<section name="section.promotion.prices">
						<columnlayout leftwidth="370">
							<row>
								<attribute name="percentageDiscount" labelwidth="100" />
								<text name="text.productpercentagediscountpromotion.percentagediscount" />
							</row>
						</columnlayout>
					</section>
				</tab>
				<tab name="tab.promotion.messages" mode="append">
					<section name="section.promotion.messages" mode="append">
						<columnlayout leftwidth="500">
							<row>
								<text name="text.promotion.messages.overview" />
							</row>
							<row>
								<text name="text.productpercentagediscountpromotion.messagefired" />
							</row>
							<row>
								<attribute name="messageFired" labelwidth="100" width="400">
									<textareaeditor expanded="true" rows="5" />
								</attribute>
								<text name="text.productpercentagediscountpromotion.messagefiredargs" />
							</row>
						</columnlayout>
					</section>
				</tab>
			</editor>
		</organizer>
	</type>

  <type name="OshPromotionVoucher" icon="ext/voucher/images/e_voucher.gif" mode="append">
	   <organizer>
	      <search>
	         <condition attribute="voucherCode"/>
	      </search>
	      <editor>
	         <essentials mode="replace">
	            <listlayout>
	               <text name="text.promotionvoucher.common" width="353"/>
	               <attribute name="code" maxlength="3"/>
	               <attribute name="name"/>
	            </listlayout>
	         </essentials>
	         <tab name="tab.common" position="0">
	            <section name="section.voucher.description">
	               <listlayout>
	                  <text name="text.promotionvoucher.vouchercode" width="353"/>
	                  <table>
	                     <tr>
	                        <td>
	                           <attribute name="voucherCode"/>
	                        </td>
	                        <td>
	                           <action type="item" classname="de.hybris.platform.voucher.hmc.GeneratePromotionVoucherCodeAction" name="btn.generate.voucher.code.action"/>
	                        </td>
	                     </tr>
	                  </table>
	               </listlayout>
	            </section>
	         </tab>
	         <tab name="tab.voucher.restrictions" position="1">
	            <section name="section.voucher.restrictions">
	               <listlayout>
	               	<text name="text.voucher.restrictions" width="595"/>
                     <attribute name="restrictions">
                        <referencecollectioneditor presetattribute="voucher"
                        									create="true"
                        									add="true"
                        									remove="true"
                        									autosave="true">
                           <itemlayout>
                              <attribute name="restrictionType" width="194"/>
                              <attribute name="description" width="357"/>
                           </itemlayout> 
                        </referencecollectioneditor>
                     </attribute>
	                  <attribute name="redemptionQuantityLimit" position="0"/>
	                  <attribute name="redemptionQuantityLimitPerUser" position="1"/>
	               </listlayout>
	            </section>
	         </tab>                  
	      </editor>
	   </organizer>
	</type>
	<type name="OSHShipping" mode="append">
		 <organizer>
		 	<search mode="replace">
		 		<condition attribute="shippingMethod"/>
		 		<condition attribute="zipcodeFrom"/>
		 		<condition attribute="zipcodeTo"/>
		 		<condition attribute="weightFrom"/>
		 		<condition attribute="weightTo"/>
		 	</search>
		 	<result>
                <listview mode="replace">
                    <itemlayout>
                        <attribute name="shippingMethod" width="150"/>
                        <attribute name="state" width="150"/>
                        <attribute name="zipcodeFrom" width="100"/>
                        <attribute name="zipcodeTo" width="100"/>
                        <attribute name="weightFrom" width="150"/>
                        <attribute name="weightTo" width="150"/>
                        <attribute name="shippingCost" width="150"/>
                        <attribute name="OSHMarkUp" width="160"/>
                    </itemlayout>
                </listview>
            </result>
            <editor>
	         <essentials mode="replace">
	            <listlayout>
	            	<attribute name="shippingMethod"/>
	        	</listlayout>
	        </essentials>
	        <tab name="tab.oshShipping">
	        	<section name="section.oshShipping">
                        <listlayout>	
                        	<attribute name="state"/>
                            <attribute name="zipcodeTo"/>
                        	<attribute name="zipcodeFrom"/>
                        	<attribute name="weightFrom"/>
                        	<attribute name="weightTo"/>
                        	<attribute name="shippingCost"/>
                        	<attribute name="OSHMarkUp"/>
                        </listlayout>
                    </section>
	        </tab>
	        </editor>  
		 </organizer>
	</type>
	<type name="Warehouse" mode="append">
	<organizer>
	   <search mode="replace">
			<condition attribute="code"></condition>
			<condition attribute="name"></condition>
			<condition attribute="vendor"></condition>
			<condition attribute="default"></condition>
	  </search>
	    <result>
	       <listview mode="replace">
	          <itemlayout>
	            <attribute name="code" width="150"></attribute>
	            <attribute name="name" width="150"></attribute>
	            <attribute name="vendor" width="150"></attribute>
	            <attribute name="default" width="150"></attribute>
	           </itemlayout>
	       </listview>
	    </result>
	    <editor>
	      <tab name="tab.warehouse">
	        	<section name="section.warehouse">
                        <listlayout>	
                        	<attribute name="code"/>
                            <attribute name="name"/>
                        	<attribute name="vendor"/>
                        	<attribute name="default"/>
                        </listlayout>
                    </section>
	        </tab>
	        </editor>
	</organizer>
	</type>
	<type name="StockLevel" mode="append">
	<organizer>
	   <search mode="replace">
			<condition attribute="warehouse"></condition>
			<condition attribute="productCode"></condition>
			<condition attribute="inStockStatus"></condition>
	  </search>
	    <result>
	       <listview mode="replace">
	          <itemlayout>
	            <attribute name="warehouse" width="120"></attribute>
	            <attribute name="productCode" width="120"></attribute>
	            <attribute name="vendor" width="120"></attribute>
	            <attribute name="inStockStatus" width="120"></attribute>
	            <attribute name="available" width="120"></attribute>
	            <attribute name="maxPreOrder" width="100"></attribute>
	            <attribute name="maxStockLevelHistoryCount" width="100"></attribute>
	            <attribute name="overSelling" width="100"></attribute>
	            <attribute name="preOrder" width="100"></attribute>
	            <attribute name="reserved" width="100"></attribute>
	           </itemlayout>
	       </listview>
	    </result>
	    <editor>
	      <tab name="tab.stocklevel">
	        	<section name="section.stocklevel">
                        <listlayout>	
                        	   <attribute name="warehouse" ></attribute>
					            <attribute name="productCode"></attribute>
					            <attribute name="vendor"></attribute>
					            <attribute name="inStockStatus"></attribute>
					            <attribute name="available"></attribute>
					            <attribute name="maxPreOrder"></attribute>
					            <attribute name="maxStockLevelHistoryCount"></attribute>
					            <attribute name="overSelling"></attribute>
					            <attribute name="preOrder"></attribute>
					            <attribute name="reserved"></attribute>
                        </listlayout>
                    </section>
	            </tab>
	        </editor>
	</organizer>
	</type>
	
	<type name="OshStoreFlag" mode="append">
		<organizer>
			<search mode="replace">
				<condition attribute="storeFlag"></condition>
			</search>
			
			<result>
				<listview mode="replace">
					<itemlayout>
						<attribute name="storeFlag" width="120"></attribute>
					</itemlayout>					
				</listview>
			</result>
			
			<editor>
				<tab name="tab.storeflag">
					<section name="section.storeflag">
						<listlayout>
							<attribute name="storeFlag"></attribute>
						</listlayout>
					</section>
				</tab>
			</editor>
		</organizer>
	</type>
</configuration>
