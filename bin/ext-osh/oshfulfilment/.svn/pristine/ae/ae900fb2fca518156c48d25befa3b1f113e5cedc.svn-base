<?xml version="1.0" encoding="utf-8"?>
<process xmlns="http://www.hybris.de/xsd/processdefinition" start="waitBeforeTransmission" name="testConsignmentFulfilmentSubprocess" processClass="de.hybris.platform.ordersplitting.model.ConsignmentProcessModel">

	<action id="waitBeforeTransmission" bean="test.waitBeforeTransmission">
		<transition name="NOK" to="waitBeforeTransmission"/>
		<transition name="OK" to="sendConsignmentToWarehouse"/>
	</action>

	<action id="sendConsignmentToWarehouse" bean="test.sendConsignmentToWarehouse">
		<transition name="OK" to="receiveConsignmentStatus"/>
	</action>


	<action id="receiveConsignmentStatus" bean="test.receiveConsignmentStatus">
		<transition name="OK" to="takePayment"/>
		<transition name="PARTIAL" to="calculatePayment"/>
		<transition name="CANCEL" to="cancelConsignment"/>
		<transition name="ERROR" to="error"/>
	</action>

	<action id="calculatePayment" bean="test.calculatePayment">
		<transition name="OK" to="takePayment"/>
	</action>

	<action id="takePayment" bean="test.takePayment">
		<transition name="OK" to="allowShipment"/>
		<transition name="NOK" to="sendPaymentFailedMessage"/>
	</action>

	<action id="allowShipment" bean="test.allowShipment">
		<transition name="OK" to="sendDeliveryMessage"/>
	</action>

	<action id="sendDeliveryMessage" bean="test.sendDeliveryMessage">
		<transition name="OK" to="subprocessEnd"/>
	</action>

	<action id="sendPaymentFailedMessage" bean="test.sendPaymentFailedMessage">
		<transition name="OK" to="subprocessEnd"/>
	</action>

	<action id="cancelConsignment" bean="test.cancelConsignment">
		<transition name="OK" to="sendCancelMessage"/>
	</action>

	<action id="sendCancelMessage" bean="test.sendCancelMessage">
		<transition name="OK" to="subprocessEnd"/>
	</action>


	<action id="subprocessEnd" bean="test.subprocessEnd">
		<transition name="OK" to="success"/>
	</action>

	<end id="error" state="ERROR">All went wrong.</end>
	<end id="failed" state="FAILED">Order not placed.</end>
	<end id="success" state="SUCCEEDED">Order placed.</end>
</process>