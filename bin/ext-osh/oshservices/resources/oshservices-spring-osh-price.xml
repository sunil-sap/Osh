	<!-- price specific converters -->
	<bean id="oshPriceSellConverterForStagedVersion" class="com.hybris.osh.services.dataimport.batch.converter.impl.OshProductPriceConverter">
		<property name="fieldSeperator" value="|"/>
		<property name="linesToSkip" value="0"/>
		<property name="header">
			<value>#{oshImpexProductHeader}
				# update price of the oshvariant product
				$catalogVersion=catalogversion(catalog(id[default=oshProductCatalog]),version[default='Staged'])[unique=true,default='$productCatalog:Staged']
				$prices=Europe1prices[translator=de.hybris.platform.europe1.jalo.impex.Europe1PricesTranslator]
				INSERT_UPDATE PriceRow;currency(isocode);ug(code)[unique=true];net[default=true];price;unit(code)[default='pieces'];unitFactor[default=1];product(code,$catalogVersion)[unique=true];startTime;endTime
			</value>
		</property>
		<property name="impexRow">
			<value>;{+6};{p5};;{q7};;;{+4};{s8};{s9}</value>
		</property>
		
		<property name="customColumnTranslators">
			<map>
				<entry key="p" value-ref="oshPriceTranslator"/>
				<entry key="q" value-ref="oshDotToCommaTranslator"/>
				<entry key="s" value-ref="oshDateTranslator"/>
			</map>
		</property>
		<property name="userService" ref="userService"/>
	</bean>
	
	
